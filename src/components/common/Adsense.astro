---
import type { Adsense as Props } from '~/types';

const { slot = '' } = Astro.props;
---

{
  slot && (
    <div class="my-auto">
      <script is:inline async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js" />
      <ins
        class="adsbygoogle"
        style="display:block"
        data-ad-client="ca-pub-4767792886458221"
        data-ad-slot={slot}
        data-ad-format="auto"
        data-full-width-responsive="true"
      />
      <script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
    </div>
  )
}
